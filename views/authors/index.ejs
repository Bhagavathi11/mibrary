<div class="section ">
  <h2>Search Authors</h2>

<div class="container pd">

    <div class="card border-primary mb-3 mx-auto" style="max-width: 30rem;">
      

        <div class="card-body text-primary">
          
          <form action="/authors" method="GET" >

            <div class="mb-3 ">
              <label  class="form-label">Name</label>
              <input type="text" class="form-control"  name="name" value="<%= searchOptions.name %>" >
            </div>
            
            <button type="submit" class="btn btn-primary">Search</button>
          </form>
       
      </div>
    </div>
</div>
</div>

  

<br>
<% authors.forEach(author => { %>
  <div><%= author.name %></div>
  <a href="/authors/<%=author.id%>">View</a>
  <a href="/authors/<%=author.id%>/edit">Edit</a>
  <%- include('../partials/deleteForm',{url:`/authors/${author.id}`}) %>
<% }) %>


