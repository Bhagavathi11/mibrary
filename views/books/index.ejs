<div class="section ">
  <h2>Search Books</h2>

  <div class="container pd">

    <div class="card border-primary mb-3 mx-auto" style="max-width: 30rem;">
      

        <div class="card-body text-primary">
            <form action="/books" method="GET">
              <div class="mb-3 ">
                <label  class="form-label">Title</label>
                <input type="text" class="form-control"  name="title" value="<%=searchOptions.title%>" >
              </div>

              <div class="mb-3 ">
                <label  class="form-label">publishedAfter</label>
                <input type="date" class="form-control"  name="publishedAfter" value="<%=searchOptions.publishedAfter%>" >
              </div>

              <div class="mb-3 ">
                <label  class="form-label">publishedBefore</label>
                <input type="date" class="form-control"  name="publishedBefore" value="<%=searchOptions.publishedBefore%>" >
              </div>

              <button type="submit" class="btn btn-primary">submit</button>
            </form>
        </div>

    </div>
    
  </div>
</div>

<div>
  <% books.forEach(book=>{%>
    <a href="/books/<%=book.id%>">
      <img height="150" width="100" src="<%=book.coverImagePath%>">
    </a>
  <%})%>
</div>



